{
  "name": "enesesen.com",
  "description": "Personal Web Site",
  "version": "1.0.0",
  "private": true,
  "author": "Enes ESEN <enes@enesesen.com>",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "blog",
    "typescript"
  ],
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write src",
    "prepare": "husky install",
    "analyze": "ANALYZE=true yarn build",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@chakra-ui/react": "2.0.0-next.2",
    "@chakra-ui/theme-tools": "^2.0.0-next.2",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "framer-motion": "^6.3.3",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-icons": "4.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@next/bundle-analyzer": "^12.1.6",
    "@types/node": "^16.11.19",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "eslint": "^8.15.0",
    "eslint-config-next": "12.1.6",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "next-sitemap": "2.5.20",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
